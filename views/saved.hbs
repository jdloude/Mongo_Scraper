<nav class="navbar navbar-expand-md navbar-dark bg-dark">
  <a class="navbar-brand" href="/home">Mongo Scraper Homework</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false"
    aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarNav">
    <ul class="navbar-nav">
      <li class="nav-item">
        <a class="nav-link" style="color: white;" href="/home">Home </a>
      </li>
      <li class="nav-item active">
        <a class="nav-link" href="/saved">Saved
          <span class="sr-only">(current)</span>
        </a>
      </li>
    </ul>
  </div>
</nav>
<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4 text-center font-weight-bold">Mongo News Scrapper</h1>
    <p class="lead text-center font-weight-bold">New York Times Edition</p>
  </div>
</div>
{{#if news}} {{#each news}}
<div class="card mx-3 mb-3">
  <h5 class="card-header">
    <a href="{{link}}">{{title}}</a>
    <button data-id="{{_id}}" class="btn btn-secondary show float-right">Comments</button>
  </h5>
  <div class="card-body">
    <p class="card-text">{{summary}}</p>
  </div>
</div>
{{/each}} {{else}}
<div class="card mx-3 mb-3">
  <h5 class="card-header text-center">There are no saved articles</h5>
</div>
{{/if}}

<div class="modal fade" id="comments" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-body pb-1">
        <div class="prevCom"></div>
        <form>
          <div class="form-group">
            <label for="com-text">Comment Message</label>
            <textarea class="form-control" id="com-text" rows="3"></textarea>
          </div>
          <button id="new-comment" class="btn btn-secondary" type="button">Add Comment</button>
        </form>
      </div>
      <div class="model-footer">
        <button type="button" class="btn btn-secondary float-right mb-3 mr-3" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>


<script src="assets/js/saved.js">

</script>